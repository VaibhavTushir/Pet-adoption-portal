          <!-- Call to Action section -->
          <div class="@container">
            <div class="flex flex-col justify-end gap-6 px-4 py-10 @[480px]:gap-8 @[480px]:px-10 @[480px]:py-20 text-center">
              <div class="flex flex-col gap-2">
                <h1 class="text-[#111518] tracking-light text-[32px] font-bold leading-tight @[480px]:text-4xl @[480px]:font-black @[480px]:leading-tight @[480px]:tracking-[-0.033em] max-w-[720px] mx-auto text-center">
                  Ready to Make a Difference?
                </h1>
                <p class="text-[#111518] text-base font-normal leading-normal max-w-[720px] mx-auto text-center">
                  Start your adoption journey today and bring joy to a pet's life.
